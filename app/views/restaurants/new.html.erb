<div class="container">
  <p><%= link_to 'Back to list', restaurants_path %></p>

  <div>
    <%= simple_form_for [@restaurant] do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, as: :select, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
    <%= f.submit "Add a restaurant", class: "btn btn-primary" %>
    <% end %>
  </div>

</div>
